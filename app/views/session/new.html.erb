<div class="login-form">
<% unless @message.nil? %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <li><em><%= @message %></em></li>
    </ul>
  </div>
<% end %>

<%= form_tag "/session", {class: 'login-form'} do %>
  <%= email_field_tag :email, placeholder: "email"  %>
  <br/>
  <br/>
  <%= password_field_tag :password, placeholder: "password" %>
  <br/><br/>
  <div class="login">
  <%= submit_tag "Log in!" %>
</div>
<% end %>
</div>